<%# heading: project details %>
<div class="container p-4">
  <div class="card-white">
    <h1><%=@project.brand%>: <%= @project.name %></h1>
    <h2><%=@project.project_end.strftime("%e %b") %></h2>
  </div>

<div class="card-frosted">
  <div class="container d-flex">
    <%# list of deliverables %>
    <div>
      <% @project.deliverables.each do |deliv| %>
      <div class="container d-flex card-white" >
        <div class="d-flex flex-column p-1">
          <p><%= deliv.due_date.strftime("%b") %></p>
          <p><%= deliv.due_date.strftime("%e")%></p>
        </div>
        <div class="flex-grow-1 p-1">
          <a href="<%=deliverable_path(deliv)%>">
            <p><%= deliv.deliverable_type %></p>
          </a>
          <p><% deliv.tag_list.each do |tag|%>
            <span class="badge badge-primary"><%= tag %></span>
          <% end %></p>
        </div>
      </div>
      <% end %>
    </div>

    <%# list of drafts for each deliv %>
    <div class="card-white ml-4">
      <div class="container d-flex justify-content-between">
        <div>
          <h2><%=@deliverable.deliverable_type%></h2>
          <p><%= @deliverable.description %></p>
        </div>
        <div>
          <h2><%=@deliverable.due_date.strftime("%e %b") %></h2>
        </div>
      </div>
      <div class="d-flex flex-column">
        <a href="<%=new_deliverable_draft_path(@deliverable)%>" class="btn btn-primary btn-lg btn-block py-3 rounded-custom">Submit new draft</a>
        <div class="container custom-container custom-list section">
          <%= render @drafts %>
        </div>
    </div>

</div>
